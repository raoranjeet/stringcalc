@{
	Layout = null;
}

<!DOCTYPE html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Calculator</title>

		<!-- CSS Includes -->
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
		
		<style type="text/css">

			.field-validation-error {
				color: #ff0000;
			}

		</style>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
		<script type="text/javascript">
		</script>
	</head>
	
	<body>
		<div class="container">
			<div class="col-md-6 col-md-offset-3">
				<h1>Calculator</h1>
				<form>
					<br />
					<label>Enter your math equation below and click on Calculate:</label><br />
					<input type="text" name="question" class="form-control" /><br/>
					<div class="text-center">
						<input type="submit" value="Calculate" class="btn btn-primary" />
						<input type="button" value="Hello World" class="btn" />
					</div>
				</form>
	
				<br/><br/>
				<div class="alert alert-warning">
					<strong><span class="alert-content" id="calcResult">[calculation result will be displayed here]</span></strong>
				</div>
			</div>
		</div>

	</body>
</html>
